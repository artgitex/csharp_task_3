@using ToDoApp.Models
@model IEnumerable<ToDoItem>

<table class="table table-bordered" id="taskTable">
    <thead>
        <tr>
            <th>
                Task
            </th>
            <th>
                End Date
            </th>
            <th>
                Status
            </th>
            <th>
                Assignee
            </th>            
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
            @foreach (var item in Model)
            {
        <tr>
            <td>
                @item.Task
            </td>
            <td>
                @item.EndDate
            </td>
            <td>
                @item.Status
            </td>
            <td>
                @item.Assignee
            </td>            
            <td text-right">
                <a onclick="jQueryModalGet('?handler=CreateOrEdit&id=@item.Id','Edit Task')" class="btn btn-info text-white"> Edit</a>
                <form method="post" asp-page="Index" asp-route-id="@item.Id" asp-page-handler="Delete" onsubmit="return jQueryModalDelete(this)" class="d-inline">
                    <button type="submit" class="btn btn-danger text-white"> Delete</button>
                </form>
            </td>
        </tr>
            }
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#taskTable").DataTable();
    });
</script>
